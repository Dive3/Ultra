<% include _header %>

<h1> Registro de nuevo usuario </h1>

<h2> Ingresa tu información: </h2>
<form action="/registro" method="post">
    <div class="form-group">
        <input name = "usuario" type ="text" class="form-control"
        placeholder="Nombre de usuario" required autofocus />
    </div>
    <div class= "form-group">
        <input name="password" type ="password" class ="form-control"
        placeholder="Contraseña" required/>
    </div>
    
    <select class="form-control" name="role" type="text">
        <option>Gerente</option>
        <option>Produccion</option>
        <option>Ventas</option>
        <option>Joyeria(Gerencia)</option>
        <option>Joyeria(Ventas)</option>
    </select>

    <div>
        <input type="submit" value="Registrar" class="btn btn-dark btn-block"/>
    </div>
</form>

<% include _footer %>